FROM       golang:1.11.4-alpine

# install runtime scripts
ADD . $GOPATH/src/git.corp.adobe.com/adobe-platform/etcd-mesos

WORKDIR $GOPATH/src/git.corp.adobe.com/adobe-platform/etcd-mesos

RUN apk add --no-cache \
      bash \
      build-base \
      curl \
      make \
      git \
      sqlite-dev \
      openssh-client \
      && make install-tools

